<div class="container ui-corner-all">
	<div class="accordion" style="margin-bottom: 10px">
		<h3>Projects</h3>
		<div>
			<div class="scrolling-container ui-corner-all">
				{{#each}}
					<div style="margin:4px 0px 4px 0px">
						{{view ASTool.ButtonView action="openProject" argument=this label=this minWidth='82%' icon="ui-icon-folder-open"}}
						{{view ASTool.ButtonView action="deleteProject" argument=this icon="ui-icon-trash" class="textless-button"}}
					</div>
				{{else}}
					<h5>No projects have been created yet.</h5>
				{{/each}}
			</div>
			<div class="big ui-corner-all" id="create-project-box">
				<h3>Enter the site you want to scrape:</h3>
				{{view ASTool.TextField value=projectSite width='300px' name='projectSiteTextField' placeholder='Enter site url'}}
				<div style="margin-top:10px">
					{{view ASTool.ButtonView action="createProject" icon="ui-icon-circle-plus" label="New project"}}
				</div>
			</div>
		</div>
	</div>
</div>
