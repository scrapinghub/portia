{{#dropdown-widget class="list-item-icon" focusMenu=true menuContainer="body" menuAlign="right" as |options|}}
    {{#if (eq options.section 'widget')}}
        {{list-item-icon icon=icon action=(action options.toggleMenu) tabindex=-1}}
    {{else if (eq options.section 'menu')}}
        {{yield options}}
    {{/if}}
{{/dropdown-widget}}
