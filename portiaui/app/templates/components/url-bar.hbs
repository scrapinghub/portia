<div id="url-bar" class="input-group">
    <span class="input-group-btn">
        <button class="btn btn-default" type="button" disabled={{backDisabled}} {{action 'back'}}>
            <span class="fa fa-arrow-left"></span>
        </button>
        <button class="btn btn-default" type="button" disabled={{forwardDisabled}} {{action 'forward'}}>
            <span class="fa fa-arrow-right"></span>
        </button>
        {{#if modeDescription}}
            <button class="btn btn-default btn-mode btn-mode-{{browser.mode}}" type="button" disabled>
                {{modeDescription}}
            </button>
        {{/if}}
    </span>
    {{buffered-input placeholder="Enter a website address" value=(mut url) viewValue=(mut editedUrl) autoSelect=true disabled=disabled spellcheck=false enter=(action 'submit')}}
    <span class="input-group-btn">
        <button class="btn btn-default" type="submit" disabled={{disabled}}>
            <span class="fa {{if loading 'fa-spin fa-refresh' (if (not (eq (or (or editedUrl url) null) browser.url)) 'fa-arrow-right' 'fa-repeat')}}"></span>
        </button>
    </span>
</div>
