{{#list-item-combo value=(mut value) valueAttribute='name' matchQuery=matchQuery selecting=(mut selecting) change=change autoSelect=true menuContainer="body" as |options|}}
    {{#dropdown-header}}
        {{yield (hash section='choices')}}
    {{/dropdown-header}}
    {{#each choices as |choice|}}
        {{#dropdown-item menu=options.menu value=choice action=(action options.setValueAndClose choice)}}
            {{yield (hash section='choice' choice=choice)}}
        {{/dropdown-item}}
    {{/each}}
    {{dropdown-divider}}
    {{#dropdown-header}}
        {{yield (hash section='rename')}}
    {{/dropdown-header}}
    {{#dropdown-item menu=options.menu value=(hash special="rename" name=options.menu.activeQuery) disabled=(not options.menu.active.special) action=(chain-actions (action 'rename' options.menu.activeQuery) (action options.closeMenu 'escape'))}}
        {{list-item-icon class="icon" icon="edit"}}Rename to {{options.menu.activeQuery}}
    {{/dropdown-item}}
    {{#dropdown-header}}
        {{yield (hash section='add')}}
    {{/dropdown-header}}
    {{#dropdown-item menu=options.menu value=(hash special="add" name=options.menu.activeQuery) disabled=(not options.menu.active.special) action=(chain-actions (action 'add' options.menu.activeQuery) (action options.closeMenu 'escape'))}}
        {{list-item-icon class="icon" icon="add"}}Add {{options.menu.activeQuery}}
    {{/dropdown-item}}
{{/list-item-combo}}
