{{#tree-list}}
    {{#if list.length}}
        {{#each list as |item index|}}
            {{#tree-list-item hasChildren=spider.startUrls.length as |options|}}
                {{#if (eq options.section "item")}}
                    {{list-item-editable value=item spellcheck=false change=(action 'changePattern' index)}}
                    {{list-item-icon icon='remove' action=(action 'removePattern' index)}}
                {{/if}}
            {{/tree-list-item}}
        {{/each}}
    {{else}}
        {{#tree-list-item hasChildren=spider.startUrls.length as |options|}}
            {{#if (eq options.section "item")}}
                No patterns defined
            {{/if}}
        {{/tree-list-item}}
    {{/if}}
{{/tree-list}}
<div class="form-group new-pattern {{if (not newPatternCorrect) 'has-error'}}">
    {{input type='text' class="form-control" placeholder="Regular expression" spellcheck=false value=(mut newPattern) escape-press=(action 'clearPattern') insert-newline=(action 'addPattern')}}
    {{icon-button icon='add' disabled=(not newPatternCorrect) action=(action 'addPattern' newPattern)}}
</div>
