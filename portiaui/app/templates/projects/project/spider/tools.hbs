{{outlet 'tool-panels'}}

{{#tool-group id="inspector-group-spider" as |options|}}
    {{#if (eq options.section "tabs")}}
        {{#tool-tab toolId="actions" group=options.group}}
            Actions
        {{/tool-tab}}
    {{else if (eq options.section "panels")}}
        {{#tool-panel class="actions container-fluid" toolId="actions" group=options.group}}
             {{page-actions-editor pageActions=model.pageActions}}
        {{/tool-panel}}
    {{/if}}
{{/tool-group}}

{{#if showExtractedItems}}
    {{#tool-group id="extracted-items-group" as |options|}}
        {{#if (eq options.section "tabs")}}
            {{#tool-tab toolId="extracted-items" group=options.group}}
                {{#extracted-items-tab projects=projects.model}}
                    Extracted items
                {{/extracted-items-tab}}
            {{/tool-tab}}
            {{#tool-tab toolId="extracted-items-json" group=options.group}}
                JSON
            {{/tool-tab}}
        {{else if (eq options.section "panels")}}
            {{#tool-panel class="extracted-items container-fluid" toolId="extracted-items" group=options.group as |active|}}
                {{extracted-items-panel selected=active}}
            {{/tool-panel}}
            {{#tool-panel class="extracted-items-json" toolId="extracted-items-json" group=options.group as |active|}}
                {{extracted-items-json-panel selected=active}}
            {{/tool-panel}}
        {{/if}}
    {{/tool-group}}
{{/if}}
