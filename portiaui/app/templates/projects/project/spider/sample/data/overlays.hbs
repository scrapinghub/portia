<div class="{{unless hoveredElement 'none-hovered'}} {{unless selectedElement 'none-selected'}} {{if hoveredModels.length 'group-hovered'}} {{if selectedModel 'group-selected'}}">
    {{#each overlayElements key="guid" as |overlay|}}
        {{#each overlay.annotations as |annotation|}}
            {{element-overlay class=(concat (if (eq overlay.element hoveredElement) 'hovered') (if (includes hoveredModels annotation) ' group-hovered') (if (and (eq overlay.element selectedElement) (eq selectedModel annotation)) ' selected') (if (eq selectedModel annotation) ' group-selected')) viewPortElement=overlay.element icon=(if (eq overlay.element hoveredElement) activeSelectionMode) color=(array-get annotationColors annotation.orderedIndex)}}
        {{/each}}
    {{/each}}
    {{element-overlay class=(concat 'hover-overlay' (unless showHoverOverlay ' hide')) viewPortElement=hoveredElement icon=activeSelectionMode color=hoverOverlayColor}}
</div>
