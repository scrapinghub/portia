{{#tool-group id="annotation-options-group" collapsible=false close=(action 'closeOptions') as |options|}}
    {{#if (eq options.section "tabs")}}
        {{#tool-tab toolId="annotation-options" group=options.group}}
            Annotation properties
        {{/tool-tab}}
    {{else if (eq options.section "panels")}}
        {{#tool-panel class="extracted-items container-fluid" toolId="annotation-options" group=options.group as |active|}}
            {{annotation-options annotation=model}}
            {{field-options field=model.field}}
        {{/tool-panel}}
    {{/if}}
{{/tool-group}}
