{{#tool-group id="inspector-group-sample" as |group|}}
    {{#if (eq group.section "tabs")}}
        {{#group.tab toolId="inspector"}}
            Inspector
        {{/group.tab}}
    {{else if (eq group.section "panels")}}
        {{#group.panel class="inspector container-fluid" toolId="inspector"}}
            {{inspector-panel sample=model}}
        {{/group.panel}}
    {{/if}}
{{/tool-group}}
